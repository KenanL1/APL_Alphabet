<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/aslViewer"
            android:layout_width="395dp"
            android:layout_height="300dp"
            android:layout_span="2"
            android:contentDescription="TODO"
            android:onClick="translateLetter"
            android:src="@drawable/a" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/displayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="---" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setString"
            android:text="Translate" />

        <EditText
            android:id="@+id/textInput"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Enter Text Here" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4" >

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="Instructions to follow:\n1) Type in the word to change into sign language letter by letter.\n2) Click on the image every time to see the next letter of the word you entered if you want to see it again."
            android:textColor="#800000"
            android:textFontWeight="400"
            android:textSize="32sp" />
    </TableRow>


</TableLayout>